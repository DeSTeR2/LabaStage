@model SelectNewDepartmentViewModel

<div class="form-container">
    <form method="post" action="@Url.Action("SelectNewDepartment", "Departments")">
        @Html.AntiForgeryToken()

        <div>
            <h4>Select Doctors to Update</h4>
            @for (int i = 0; i < Model.DoctorSelections.Count; i++)
            {
                <div class="doctor-selection">
                    <input type="hidden" asp-for="DoctorSelections[i].Id" />
                    <input type="hidden" asp-for="DoctorSelections[i].IsSelected" value="false" />
                    <input type="checkbox" asp-for="DoctorSelections[i].IsSelected" value="true" />
                    <label>@Model.DoctorSelections[i].Name</label>
                </div>
            }
        </div>

        <div>
            <label for="NewDepartmentId">Department change</label>
            <select id="NewDepartmentId" class="select-department" asp-for="NewDepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                <option value="">-- Choose department --</option>
            </select>
        </div>

        <button type="submit" class="submit-button">Update Department</button>
    </form>
</div>
