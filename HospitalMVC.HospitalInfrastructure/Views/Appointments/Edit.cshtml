@model HospitalDomain.Model.Appointment
@using Utils

@{
    ViewData["Title"] = "Edit Appointment";
}

<h1>Edit Appointment</h1>

<hr />
<div class="form-container">
    <div class="form-column">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label">Time</label>
                <input asp-for="Time" class="form-control" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reason" class="control-label">Reason</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            @if (CheckRole.IsInRoles(User, new string[] { Constants.Admin, Constants.Manager }))
            {
                <div class="form-group">
                    <label asp-for="Doctor" class="control-label">Doctor</label>
                    <select asp-for="Doctor" class="form-control" asp-items="ViewBag.Doctor"></select>
                    <span asp-validation-for="Doctor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patient" class="control-label">Patient</label>
                <select asp-for="Patient" class="form-control" asp-items="ViewBag.Patient"></select>
                <span asp-validation-for="Patient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Room" class="control-label">Room</label>
                    <select asp-for="Room" class="form-control" asp-items="ViewBag.Room"></select>
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
