@model HospitalDomain.ViewModel.LoginViewModel

<title>Login</title>

<body>
    <div class="form-container">
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <h1>Login</h1>
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <input asp-for="Email" type="email" placeholder=" " />
                <label asp-for="Email" class="required"></label>
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder=" " />
                <label asp-for="Password" class="required"></label>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <div class="checkbox-group">
                <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                <label for="rememberMe">Remember me</label>
            </div>


            <button type="submit" class="submit-button">Login</button>

            <div class="form-links">
                <a asp-controller="Account" asp-action="Register" class="register-link">Don't have an account? Register!</a>
                <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password-link">Forgot password?</a>
            </div>
        </form>
    </div>
</body>

<style>
    .form-container {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        position: relative;
        margin-bottom: 20px;
    }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group label {
            position: absolute;
            left: 10px;
            top: 10px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            color: #666;
            width: max-content;
        }

        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label {
            top: -10px;
            font-size: 0.75rem;
            color: #1b6ec2;
        }

    .field-validation-error {
        color: red;
        font-size: 0.85rem;
    }

    .checkbox-group {
        display: inline-block;
        align-items: center;
        gap: 8px; /* Adds spacing between checkbox and label */
        margin-bottom: 15px;
        width: fit-content; /* Makes it only as wide as needed */
        top: -10px;
        font-size: 0.75rem;
        color: #1b6ec2;
        font-weight: 700;
    }

        .checkbox-group label {
            background-color: unset;
        }


    .submit-button {
        width: 100%;
        padding: 12px;
        background-color: #1b6ec2;
        color: white;
        font-size: 1.1rem;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
        transition: background-color 0.3s ease;
    }

        .submit-button:hover {
            background-color: #1861ac;
        }

    .form-links {
        margin-top: 15px;
        text-align: center;
    }

        .form-links a {
            display: block;
            margin: 5px 0;
            color: #1b6ec2;
            text-decoration: none;
            font-size: 0.9rem;
        }

    .form-group label {
        position: absolute;
        top: 12px; /* Adjusted label position */
        left: 10px;
        pointer-events: none;
        transition: 0.2s ease all;
        background-color: white; /* Ensure label background matches form */
        padding: 0 5px;
        color: #aaa;
    }

            .form-links a:hover {
                text-decoration: underline;
            }
</style>
