@model HospitalDomain.Model.Doctor
@using HospitalDomain.Utils  <!-- Ensure the namespace is correct -->
@{
    ViewData["Title"] = "Delete";
}

<div class="delete-room-view">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Doctor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Speciality)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Speciality)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DepartmentNavigation)
